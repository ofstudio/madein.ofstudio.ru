{{!< default}}

{{#is "index"}}
    <main id="content" class="content" role="main">
        {{>about}}
    </main>
{{/is}}

{{#is "index, tag"}}
    <a name="portfolio"></a>
    <div class="container madein-cards-container">
        {{#is "index"}}
            <h4>Мои работы</h4>
        {{/is}}
        {{#is "tag"}}
            <h4>{{tag.name}}</h4>
            {{#if tag.description}}
                <p>{{{tag.description}}}</p>
            {{/if}}
        {{/is}}
        {{#is "paged"}}{{>pagination}}{{/is}}
        {{>loop}}
        {{>pagination}}
    </div>
{{/is}}
